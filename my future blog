import java.io.*;
import java.util.ArrayList;
import java.util.Scanner;

class BlogPost implements Serializable {
    private String title;
    private String content;

    public BlogPost(String title, String content) {
        this.title = title;
        this.content = content;
    }

    public String getTitle() {
        return title;
    }

    public String getContent() {
        return content;
    }

    @Override
    public String toString() {
        return "Заголовок: " + title + "\nСодержание: " + content + "\n";
    }
}

public class SimpleBlog {
    private static final String FILENAME = "blog_posts.dat";
    private ArrayList<BlogPost> blogPosts;
    private Scanner scanner;

    public SimpleBlog() {
        blogPosts = new ArrayList<>();
        scanner = new Scanner(System.in);
        loadBlogPosts();
    }

    private void loadBlogPosts() {
        try (ObjectInputStream ois = new ObjectInputStream(new FileInputStream(FILENAME))) {
            blogPosts = (ArrayList<BlogPost>) ois.readObject();
        } catch (IOException | ClassNotFoundException e) {
            // Если файл не найден или возникает ошибка ввода/вывода
            System.out.println("Не удалось загрузить записи блога. Создан новый блог.");
        }
    }

    private void saveBlogPosts() {
        try (ObjectOutputStream oos = new ObjectOutputStream(new FileOutputStream(FILENAME))) {
            oos.writeObject(blogPosts);
        } catch (IOException e) {
            System.out.println("Не удалось сохранить записи блога.");
        }
    }

    public void addBlogPost(String title, String content) {
        BlogPost newPost = new BlogPost(title, content);
        blogPosts.add(newPost);
        saveBlogPosts();
        System.out.println("Запись успешно добавлена.");
    }

    public void viewBlogPosts() {
        if (blogPosts.isEmpty()) {
            System.out.println("Блог пуст.");
        } else {
            System.out.println("Записи блога:");
            for (BlogPost post : blogPosts) {
                System.out.println(post);
            }
        }
    }

    public void deleteBlogPost(int index) {
        if (index >= 0 && index < blogPosts.size()) {
            blogPosts.remove(index);
            saveBlogPosts();
            System.out.println("Запись успешно удалена.");
        } else {
            System.out.println("Некорректный индекс записи блога.");
        }
    }

    public static void main(String[] args) {
        SimpleBlog simpleBlog = new SimpleBlog();
        Scanner scanner = new Scanner(System.in);

        int choice;
        do {
            System.out.println("\n1. Добавить запись в блог");
            System.out.println("2. Просмотреть записи в блоге");
            System.out.println("3. Удалить запись из блога");
            System.out.println("0. Выйти");

            System.out.print("Выберите действие: ");
            choice = scanner.nextInt();
            scanner.nextLine();  // consume newline

            switch (choice) {
                case 1:
                    System.out.print("Введите заголовок записи: ");
                    String title = scanner.nextLine();
                    System.out.print("Введите содержание записи: ");
                    String content = scanner.nextLine();
                    simpleBlog.addBlogPost(title, content);
                    break;
                case 2:
                    simpleBlog.viewBlogPosts();
                    break;
                case 3:
                    System.out.print("Введите индекс записи для удаления: ");
                    int index = scanner.nextInt();
                    simpleBlog.deleteBlogPost(index);
                    break;
                case 0:
                    System.out.println("Выход из программы.");
                    break;
                default:
                    System.out.println("Некорректный выбор. Повторите попытку.");
            }
        } while (choice != 0);
    }
}
